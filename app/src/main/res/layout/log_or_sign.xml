<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark"
    tools:context="com.senr.ichra.dom011.LogOrSign">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="20dp"
        android:src="@drawable/logo" android:contentDescription="TODO" />

    <Button
        android:id="@+id/buttonSin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/buttonLogin"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/sign_up"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/buttonSin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#11000000"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/log_in"
        android:textColor="#fff"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        app:srcCompat="@drawable/twitter" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        app:srcCompat="@drawable/instagram" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        app:srcCompat="@drawable/facebook" android:contentDescription="TODO" />

</RelativeLayout>
