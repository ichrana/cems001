<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark"
    tools:context="com.senr.ichra.dom011.AddGuardianPage">


    <EditText
        android:id="@+id/editTextNameGuardian"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/editTextEmailGuardian"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"

        />


    <EditText
        android:id="@+id/editTextEmailGuardian"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextNameGuardian"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"

        />

    <Button
        android:id="@+id/buttonAddGuardian"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editTextEmailGuardian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:clickable="true"
        android:text="Add guardian"
        android:textColor="#fff"
        android:textSize="18sp"
         />




</RelativeLayout>
