<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark"
    tools:context="com.senr.ichra.dom011.LoginPage">


    <EditText
        android:id="@+id/editTextUsernameLog"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/editTextPassLog"
        android:layout_alignStart="@+id/editTextPassLog"
        android:layout_marginBottom="52dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTextPassLog"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextPassLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:clickable="true"
        android:text="Log in"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonForgetLogin"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#11000000"
        android:clickable="true"
        android:text="Forget my password"
        android:textColor="#ffff0000"
        android:textSize="13sp"
        />

</RelativeLayout>
